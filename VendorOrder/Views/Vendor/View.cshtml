<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor Order Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using VendorOrder.Models;

    <h3>Here are all the Orders from this Vendor:</h3><br>

    <ol>
    @foreach (Order order in @Model["Orders"])
    {
      <li><a href='/vendor/@Model["Vendor"].ID/orders/@order.ID'>@order.Description</a></li><br>
    }
    </ol>

    <p><a href='/vendor/@Model["Vendor"].ID/orders/new'>Add a new order</a></p>
    <p><a href='/vendor'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>